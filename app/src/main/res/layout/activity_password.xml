<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@color/colorPrimaryDark"
android:layout_height="match_parent"
tools:context=".Password">
<ImageView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scaleType="fitXY"
    android:src="@drawable/background"/>

<TextView
    android:id="@+id/password"
    android:layout_width="279dp"
    android:layout_height="58dp"
    android:layout_marginTop="40dp"
    android:background="@drawable/filedsset"
    android:text="Password"
    android:textAlignment="center"
    android:textColor="@color/text"
    android:textSize="36sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0" />

<EditText
    android:id="@+id/pasw2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:shadowColor="#292150"
    android:hint="Enter password"
    android:backgroundTint="#8A0505"

    android:inputType="textPassword"
    android:textColorHint="#424242"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.419" />

<CheckBox
    android:id="@+id/checkBox22"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:buttonTint="#424242"
    android:text=" Show passvord"
    android:textColor="#424242"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/pasw2"
    app:layout_constraintTop_toBottomOf="@+id/pasw2"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/button52"
    android:layout_width="111dp"
    android:layout_height="55dp"
    android:layout_marginTop="58dp"
    android:background="@drawable/filedsset"
    android:onClick="onButton"
    android:text="next"
    android:textColor="@color/text"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.946"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/checkBox22"
    app:layout_constraintVertical_bias="0.802" />

<TextView
    android:id="@+id/textView252"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:clickable="true"
    android:text="Forgot password?"
    android:textColor="#424242"
    app:layout_constraintStart_toStartOf="@+id/checkBox22"
    app:layout_constraintTop_toBottomOf="@+id/checkBox22" />

</androidx.constraintlayout.widget.ConstraintLayout>